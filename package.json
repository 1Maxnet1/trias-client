{
    "name": "trias-client",
    "version": "0.2.1",
    "description": "Lean Node.js client for public transport TRIAS APIs.",
    "keywords": [
        "public-transport",
        "trias"
    ],
    "main": "lib/index.js",
    "scripts": {
        "build": "tsc",
        "format": "prettier --write \"src/**/*.ts\"",
        "lint": "tslint -p tsconfig.json",
        "test": "tsc && jest"
    },
    "jest": {
        "testEnvironment": "node",
        "coveragePathIgnorePatterns": [
            "/node_modules/"
        ],
        "verbose": true
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/andaryjo/trias-client.git"
    },
    "author": "Andary",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/andaryjo/trias-client/issues"
    },
    "devDependencies": {
        "@types/node": "^14.14.35",
        "friendly-public-transport-format": "^1.2.1",
        "jest": "^26.6.3",
        "prettier": "^2.2.1",
        "ts-node": "^9.1.1",
        "tslint": "^6.1.3",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^4.2.3"
    },
    "dependencies": {
        "@types/request": "^2.48.5",
        "@types/xmldom": "^0.1.30",
        "axios": "^0.21.1",
        "moment-timezone": "^0.5.33",
        "xmldom": "^0.5.0"
    },
    "files": [
        "lib/**/*"
    ]
}
